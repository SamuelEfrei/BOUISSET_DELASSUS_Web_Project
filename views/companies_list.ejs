<!-- views/companies_list.ejs -->
<%- include("header.ejs"); %>

<h1 id="txttitle">Companies</h1>

<p><a href='/companies/edit/0'><button  id="button" class="w3-button w3-light-grey w3-block">Add a new company</button></a></p>

<table id="tab" class="table table-striped table-bordered table-hover">
    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Speciality</td>
        <td>Show</td>
        <td>Edit</td>
        <td>Delete</td>
    </tr>
    
<% for (var c of companies) { %>
    <tr>
        <td><%= c.company_id %></td>
        <td><%= c.company_name %></td>
        <td><% for (var f of features ) { %>
				<% if (c.company_speciality == f.feat_id) { %>
					<%= f.feat_name %> 
					<% } %>
				<% } %>
		</td>
        <td><a href='/companies/show/<%= c.company_id %>'>Show</a></td>
        <td><a href='/companies/edit/<%= c.company_id %>'>Edit</a></td>
        <td><a href='/companies/del/<%= c.company_id %>'>Delete</a></td>
    </tr>
<% } %>
</table>
<br><br><br><br><br><br>
<%- include("footer.ejs"); %>

</body>
</html>